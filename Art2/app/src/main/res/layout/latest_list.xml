<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:clickable="true"
    android:background="@drawable/ripple_bg"
    android:layout_marginBottom="10dp"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.art.util.roundImageView.RoundImageView
        android:id="@+id/userImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/userImage"
        android:id="@+id/userName"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color4"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="@id/userImage"
        app:layout_constraintLeft_toRightOf="@id/userImage"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/color4"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/userImage"
        app:layout_constraintTop_toBottomOf="@id/userImage"/>
    <TextView
        android:id="@+id/content_simple"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color3"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/myTextSizeForSub"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/myTextSizeForSub"
        android:textColor="@color/color3"
        android:fontFamily="sans-serif"
        android:layout_marginTop="13dp"
        android:id="@+id/time"
        app:layout_constraintLeft_toLeftOf="@id/content_simple"
        app:layout_constraintTop_toBottomOf="@id/content_simple"/>
    <TextView
        android:id="@+id/browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/myTextSizeForSub"
        android:textColor="@color/color3"
        android:fontFamily="sans-serif"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintTop_toTopOf="@id/time"
        app:layout_constraintBottom_toBottomOf="@id/time"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/collectUser"
        android:text="@string/concern"
        android:background="@drawable/round"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:textStyle="bold"
        android:textColor="@color/color4"
        android:textSize="@dimen/myTextSizeForSub"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/userName"
        app:layout_constraintBottom_toBottomOf="@id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/cover"
        android:layout_width="135dp"
        android:layout_height="85dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/content_simple"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:id="@+id/favor_icon"
        android:background="@drawable/favor"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/favor"
        app:layout_constraintBottom_toBottomOf="@id/favor"
        app:layout_constraintRight_toLeftOf="@id/favor"/>
    <TextView
        android:id="@+id/favor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:textColor="@color/color3"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/myTextSizeForSub"
        app:layout_constraintRight_toLeftOf="@id/comment_icon"
        app:layout_constraintTop_toTopOf="@id/comment_icon"
        app:layout_constraintBottom_toBottomOf="@id/comment_icon"/>
    <ImageView
        android:id="@+id/comment_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/comment"
        app:layout_constraintRight_toLeftOf="@id/comment"
        app:layout_constraintTop_toTopOf="@id/comment"
        app:layout_constraintBottom_toBottomOf="@id/comment"/>
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textColor="@color/color3"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/myTextSizeForSub"
        app:layout_constraintTop_toTopOf="@id/browser"
        app:layout_constraintBottom_toBottomOf="@id/browser"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/modifyShare"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/userName"
        app:layout_constraintTop_toTopOf="@id/userName"
        app:layout_constraintBottom_toBottomOf="@id/userName"
        android:background="@drawable/modify"/>
    <ImageView
        android:id="@+id/deleteShare"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/modifyShare"
        app:layout_constraintTop_toTopOf="@id/modifyShare"
        app:layout_constraintBottom_toBottomOf="@id/modifyShare"
        android:background="@drawable/trash"/>
</androidx.constraintlayout.widget.ConstraintLayout>