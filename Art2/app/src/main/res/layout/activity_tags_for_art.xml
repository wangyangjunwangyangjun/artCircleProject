                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/myTextSize"
                android:textStyle="bold"
                android:text="绘画"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/color4"
                android:id="@+id/type1"/>
            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/tagcontainerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                app:container_background_color="@color/color1"
                app:container_border_color="@color/color6"
                app:container_border_radius="5dp"
                app:container_border_width="1dp"
                app:container_enable_drag="true"
                app:horizontal_interval="10dp"
                app:tag_clickable="true"
                app:tag_theme="random"
                app:vertical_interval="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type1"/>
